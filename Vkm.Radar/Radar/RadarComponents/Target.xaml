<UserControl x:Class="Vkm.Radar.Radar.RadarComponents.Target"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Vkm.Radar.Radar.RadarComponents.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:TargetViewModel />
    </UserControl.DataContext>
    <Grid RenderTransformOrigin="0.5 0.5" Height="2" Width="{Binding Path=Width}" Background="GreenYellow">
        <Grid.RenderTransform>
            <RotateTransform Angle="{Binding Azimuth}"/>
        </Grid.RenderTransform>
    </Grid>
</UserControl>
